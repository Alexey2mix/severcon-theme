/* ===== АДАПТИВНОСТЬ ===== */

/* Планшеты */
@media (max-width: 1024px) {
    .container {
        padding: 0 15px;
    }
    
    .posts-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }
    
    .footer-content {
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
    }
}

/* Мобильные устройства */
@media (max-width: 768px) {
    .top-bar-content {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }
    
    .contact-info span {
        display: block;
        margin-right: 0;
        margin-bottom: 5px;
    }
    
    .nav-menu {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background: #fff;
        flex-direction: column;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        gap: 0;
    }
    
    .nav-menu.active {
        display: flex;
    }
    
    .nav-menu li {
        margin: 0;
        border-bottom: 1px solid #f8f9fa;
    }
    
    .nav-menu li:last-child {
        border-bottom: none;
    }
    
    .nav-menu a {
        display: block;
        padding: 15px 0;
    }
    
    .mobile-menu-toggle {
        display: flex;
    }
    
    .mobile-menu-toggle.active span:nth-child(1) {
        transform: rotate(-45deg) translate(-5px, 6px);
    }
    
    .mobile-menu-toggle.active span:nth-child(2) {
        opacity: 0;
    }
    
    .mobile-menu-toggle.active span:nth-child(3) {
        transform: rotate(45deg) translate(-5px, -6px);
    }
    
    .posts-grid {
        grid-template-columns: 1fr;
    }
    
    .page-title {
        font-size: 28px;
    }
    
    .single-title {
        font-size: 24px;
    }
    
    .footer-content {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .site-content {
        padding: 20px 0;
    }
}

/* Маленькие мобильные */
@media (max-width: 480px) {
    .container {
        padding: 0 10px;
    }
    
    .logo h1 {
        font-size: 20px;
    }
    
    .post-content {
        padding: 20px;
    }
    
    .post-content h2 {
        font-size: 18px;
    }
    
    .page-title {
        font-size: 24px;
    }
    
    .error-404 h1 {
        font-size: 36px;
    }
}